
<div class="container px-4 py-5" id="custom-cards">
    <h2 class="pb-2 border-bottom">目標</h2>
  
    <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
      <% @visions.each do |vision| %>
        <div class="col">
          <div class="box1">
            <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('../../../../public/本田圭佑.jpg');">
              <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                <h3 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold"><%= vision.text %></h3>
                <ul class="d-flex list-unstyled mt-auto">
                  <li class="me-auto">
                    <img src="https://github.com/twbs.png" alt="Bootstrap" width="32" height="32" class="rounded-circle border border-white">
                  </li>
                  <li class="d-flex align-items-center me-3">
                    <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#geo-fill"></use></svg>
                    <small><%= link_to 'show', vision_path(vision.id), class: "link-light text-decoration-none" %></small>
                  </li>
                  <li class="d-flex align-items-center">
                    <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"></use></svg>
                    <small><%= link_to 'edit', edit_vision_path(vision.id), class: "link-light text-decoration-none" %></small>
                  </li>
                </ul>
              </div>
            </div>
            <% if vision.clear == true %>
              <div class='clear'>
                <span>Win!!</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>