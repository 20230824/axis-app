<div class="contents row">
  <% @visions.each do |vision| %>
    <div class="content_post">
      <div class="more">
        <ul class="more_list">
           <li>
            <%= link_to '詳細', vision_path(vision.id) %>
          </li>
          <li>
            <%= link_to '編集', edit_vision_path(vision.id) %>
          </li>          
          <li>
            <%= link_to '削除', vision_path(vision.id), data: { turbo_method: :delete } %>
          </li>
        </ul>
      </div>
      <p><%= vision.text %></p>
      <span class="name">
      </span>
    </div>
  <% end %>
</div>
